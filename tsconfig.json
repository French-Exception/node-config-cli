{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "diagnostics": false,
    "newLine": "LF",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "pretty": true,
    "preserveConstEnums": true,
    "watch": false,
    "sourceRoot": "src",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "stripInternal": true,
    "skipLibCheck": false,
    "downlevelIteration": true,
    "lib": [
      "es2020"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/src"
    ]
  },
  "include": [
    "./src/**/*"
  ]
}
